<?xml version="1.0" encoding="utf-8" ?>
<toasts:ToastBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toasts="clr-namespace:MauiMvvmApp.Toasts" 
             x:Class="MauiMvvmApp.Toasts.AlertToast"
             WidthRequest="300" HeightRequest="100">
    <Border BackgroundColor="{StaticResource ColorNeutralBackground1}" Padding="12">
        <VerticalStackLayout>
            <Label x:Name="Message" />
        </VerticalStackLayout>
    </Border>
</toasts:ToastBase>
